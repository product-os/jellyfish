{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "allowJs": false,
    "moduleResolution": "node"
  },
  "include": [
    "./components/**/*.ts",
    "./components/**/*.d.ts"
  ]
}
