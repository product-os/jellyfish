{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "declaration": false,
    "jsx": "react",
    "removeComments": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true
  },
  "include": [
    "./lib/Types.ts",
    "./lib/ui/**/*.ts",
    "./lib/ui/**/*.tsx",
    "./lib/typings/**/*.d.ts"
  ]
}

