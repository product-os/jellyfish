{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "removeComments": true,
        "preserveConstEnums": true,
        "strictNullChecks": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true
    },
    "include": [
        "./lib/ui/**/*.ts",
        "./lib/ui/**/*.tsx",
        "./lib/sdk/**/*.ts",
        "./lib/typings/**/*.d.ts"
    ]
}

