{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2015",
		"outDir": "build",
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"preserveConstEnums": true,
		"removeComments": true,
		"sourceMap": true,
		"strictNullChecks": true,
		"allowJs": true,
		"moduleResolution": "node",
		"baseUrl": ".",
		"jsx": "react"
	},
	"include": [
		"./lib/chat-widget/@types/*"
	],
	"files": [
		"./lib/chat-widget/index.tsx"
	]
}
