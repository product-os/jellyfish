{
  "extends": [
    "github>product-os/jellyfish-config//config/renovate"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": ["puppeteer"],
      "groupName": "puppeteer"
    },
    {
      "matchPackageNames": ["resinci/jellyfish-test"],
      "groupName": "jellyfish-test-image"
    },
    {
      "groupName": "non-major-frontend",
      "matchPackageNames": [
        "@balena/jellyfish-ui-components",
        "@balena/jellyfish-chat-widget",
        "rendition",
        "styled-components"
      ],
      "matchPackagePatterns": ["^react"],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    }
  ]
}
