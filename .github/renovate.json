{
  "extends": [
    "github>product-os/jellyfish-renovate-config"
  ],
  "ignoreDeps": [
    "monaco-editor",
    "monaco-editor-webpack-plugin"
  ],
  "packageRules": [
    {
      "groupName": "non-major-frontend",
      "packageNames": [
        "@balena/jellyfish-ui-components",
        "@balena/jellyfish-chat-widget",
        "rendition",
        "react",
        "react-dom",
        "styled-components"
      ],
      "updateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    }
  ]
}
