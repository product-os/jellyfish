  "codename": "cephea",
  "private": true,
  "description": "The Jellyfish Project",
  "homepage": "https://github.com/product-os/jellyfish",
  "repository": {
    "type": "git",
    "url": "git@github.com:product-os/jellyfish.git"
  },
  "engines": {
    "node": ">=14.2.0"
  },
  "scripts": {},
  "deplint": {
    "files": [
      "apps/action-server/lib/**/*.js",
      "apps/server/*.js",
      "apps/server/http/**/*.js",
      "apps/server/socket/**/*.js"
    ],
    "modules": [
      "apps/server",
      "apps/action-server"
    ]
  },
  "ava": {
    "timeout": "10m",
    "verbose": true,
    "serial": true,
    "failWithoutAssertions": true,
    "files": [
      "test/**/*.spec.js"
    ]
  },
  "lint-staged": {
    "*": [
      "./scripts/lint/check-filenames.sh"
    ],
    "apps/*": [
      "./scripts/lint/check-descriptions.sh",
      "./scripts/lint/check-apps.sh"
    ],
    "*.{js,jsx}": [
      "eslint --cache --fix",
      "deplint"
    ],
    "*.sh": [
      "shellcheck"
    ],
    "*.{js,jsx,sh}": [
      "./scripts/lint/check-licenses.sh"
    ]
  },
  "author": "Balena.io. <hello@balena.io>",
