  "deplint": {
    "files": [
      "apps/action-server/lib/**/*.ts",
      "apps/server/*.js",
      "apps/server/http/**/*.js",
      "apps/server/socket/**/*.js"
    ],
    "modules": [
      "apps/server",
      "apps/action-server"
    ]
  },
  "ava": {
    "timeout": "10m",
    "verbose": true,
    "serial": true,
    "failWithoutAssertions": true,
    "files": [
      "test/**/*.spec.js"
    ]
  },
  "lint-staged": {
    "*": [
      "./scripts/lint/check-filenames.sh"
    ],
    "apps/*": [
      "./scripts/lint/check-descriptions.sh",
      "./scripts/lint/check-apps.sh"
    ],
    "*.{js,jsx}": [
      "eslint --cache --fix",
      "deplint"
    ],
    "*.{ts,tsx}": [
      "balena-lint --fix"
    ],
    "*.sh": [
      "shellcheck"
    ],
    "*.{js,jsx,sh}": [
      "./scripts/lint/check-licenses.sh"
    ]
  },
