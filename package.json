{
  "name": "jellyfish",
  "version": "33.51.27",
  "codename": "cephea",
  "private": true,
  "description": "The Jellyfish Project",
  "homepage": "https://github.com/product-os/jellyfish",
  "repository": {
    "type": "git",
    "url": "git@github.com:product-os/jellyfish.git"
  },
  "engines": {
    "node": ">=14.2.0"
  },
  "scripts": {
    "postinstall": "husky install"
  },
  "deplint": {
    "files": [
      "apps/action-server/lib/**/*.js",
      "apps/server/*.js",
      "apps/server/graphql/**/*.js",
      "apps/server/http/**/*.js",
      "apps/server/socket/**/*.js"
    ],
    "modules": [
      "apps/server",
      "apps/action-server"
    ]
  },
  "ava": {
    "timeout": "10m",
    "verbose": true,
    "serial": true,
    "failWithoutAssertions": true,
    "files": [
      "test/**/*.spec.js"
    ]
  },
  "lint-staged": {
    "*": [
      "./scripts/lint/check-filenames.sh"
    ],
    "apps/*": [
      "./scripts/lint/check-descriptions.sh",
      "./scripts/lint/check-apps.sh"
    ],
    "*.{js,jsx}": [
      "eslint --cache --fix",
      "deplint"
    ],
    "*.sh": [
      "shellcheck"
    ],
    "*.{js,jsx,sh}": [
      "./scripts/lint/check-licenses.sh"
    ]
  },
  "author": "Balena.io. <hello@balena.io>",
  "license": "UNLICENSED",
  "devDependencies": {
    "@balena/ci-task-runner": "^0.2.99",
    "@balena/jellyfish-action-library": "^8.0.14",
    "@balena/jellyfish-chat-widget": "^6.0.52",
    "@balena/jellyfish-client-sdk": "^2.13.3",
    "@balena/jellyfish-core": "^1.4.13",
    "@balena/jellyfish-environment": "^2.4.6",
    "@balena/jellyfish-plugin-base": "^1.1.2",
    "@balena/jellyfish-plugin-default": "^3.0.13",
    "@balena/jellyfish-plugin-product-os": "^1.0.7",
    "@balena/jellyfish-queue": "^0.0.391",
    "@balena/jellyfish-sync": "^4.1.47",
    "@balena/jellyfish-uuid": "^1.0.60",
    "@balena/jellyfish-worker": "^3.0.7",
    "@octokit/plugin-retry": "^3.0.7",
    "@octokit/plugin-throttling": "^3.4.1",
    "@octokit/rest": "^18.1.0",
    "ava": "^3.15.0",
    "aws-sdk": "^2.840.0",
    "bcrypt": "^5.0.0",
    "bluebird": "^3.7.2",
    "blueimp-md5": "^2.18.0",
    "cli-spinner": "^0.2.10",
    "date-fns": "^2.17.0",
    "depcheck": "^1.3.1",
    "deplint": "^1.1.3",
    "errio": "^1.2.2",
    "eslint": "^7.19.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsdoc": "^31.6.1",
    "eslint-plugin-lodash": "^7.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.22.0",
    "front-sdk": "^0.8.1",
    "husky": "^5.0.9",
    "jsonwebtoken": "^8.5.1",
    "lint-staged": "^10.5.4",
    "lodash": "^4.17.20",
    "mermaid.cli": "^0.5.1",
    "mustache": "^4.1.0",
    "nock": "^13.0.7",
    "node-jose": "^2.0.0",
    "puppeteer": "^7.0.1",
    "random-words": "^1.1.1",
