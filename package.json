{
  "name": "jellyfish",
  "version": "42.0.25",
  "homepage": "https://github.com/product-os/jellyfish",
  "description": "The Jellyfish Project",
  "codename": "#STPLTG",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git@github.com:product-os/jellyfish.git"
  },
  "engines": {
    "node": ">=14.2.0"
  },
  "scripts": {
    "lint": "eslint --ext .js,.jsx scripts test && ./scripts/lint/check-filenames.sh && shellcheck scripts/*.sh scripts/*/*.sh deploy-templates/*.sh && deplint && depcheck --ignore-bin-package --ignores=@balena/jellyfish-*",
    "test:e2e:sdk": "ava ./test/e2e/sdk/*.spec.js",
    "test:e2e:livechat": "ava ./test/e2e/livechat/**/*.spec.js",
    "postgres": "docker run -i --rm -p5432:5432 balena/open-balena-db:4.1.0",
    "redis": "docker run -i --rm -p6379:6379 balena/balena-redis:0.0.3 sh -c \"redis-server /usr/local/etc/redis/redis.conf --save ''\"",
    "docs": "(cd apps/livechat && npm run doc); (cd apps/server && npm run doc); (cd apps/ui && npm run doc)",
    "clean": "rimraf apps/*/packages/*",
    "postinstall": "(cd apps/livechat && npm i); (cd apps/server && npm i); (cd apps/ui && npm i)"
  },
  "deplint": {
    "files": [
      "apps/server/lib/**/*.ts"
    ],
    "modules": [
      "apps/server"
    ]
  },
  "ava": {
    "timeout": "10m",
    "verbose": true,
    "serial": true,
    "failWithoutAssertions": true,
    "failFast": true,
    "files": [
      "test/**/*.spec.js"
    ]
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --cache --fix",
      "deplint"
    ],
    "*.{ts,tsx}": [
      "balena-lint --fix"
    ],
    "*.sh": [
      "shellcheck"
    ]
  },
  "author": "Balena.io. <hello@balena.io>",
  "license": "AGPL-3.0",
  "devDependencies": {
    "@balena/jellyfish-action-library": "^15.1.177",
    "@balena/jellyfish-chat-widget": "^12.5.66",
    "@balena/jellyfish-client-sdk": "^7.0.22",
    "@balena/jellyfish-config": "^2.0.2",
    "@balena/jellyfish-core": "^8.1.39",
    "@balena/jellyfish-environment": "^5.2.1",
    "@balena/jellyfish-plugin-balena-api": "^1.0.189",
    "@balena/jellyfish-plugin-base": "^2.1.314",
    "@balena/jellyfish-plugin-channels": "^1.1.396",
    "@balena/jellyfish-plugin-default": "^21.1.136",
    "@balena/jellyfish-plugin-discourse": "^1.1.109",
    "@balena/jellyfish-plugin-flowdock": "^1.0.232",
    "@balena/jellyfish-plugin-front": "^1.3.111",
    "@balena/jellyfish-plugin-github": "^1.11.218",
    "@balena/jellyfish-plugin-outreach": "^1.0.322",
    "@balena/jellyfish-plugin-product-os": "^2.8.23",
    "@balena/jellyfish-plugin-typeform": "^3.0.406",
    "@balena/jellyfish-queue": "^1.0.376",
    "@balena/jellyfish-sync": "^6.1.121",
    "@balena/jellyfish-ui-components": "^13.0.40",
    "@balena/jellyfish-worker": "^10.0.138",
    "@balena/lint": "^6.2.0",
    "@octokit/plugin-retry": "^3.0.9",
    "@octokit/plugin-throttling": "^3.5.2",
    "@octokit/rest": "^18.12.0",
    "ava": "^3.15.0",
    "aws-sdk": "^2.1043.0",
    "bluebird": "^3.7.2",
    "cli-spinner": "^0.2.10",
    "date-fns": "^2.27.0",
    "depcheck": "^1.4.2",
    "deplint": "^1.1.3",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsdoc": "^35.5.1",
    "eslint-plugin-lodash": "^7.3.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.2.0",
    "eslint-plugin-react": "^7.27.1",
    "jsonwebtoken": "^8.5.1",
    "lint-staged": "^11.2.6",
    "lodash": "^4.17.21",
    "mermaid.cli": "^0.5.1",
    "mustache": "^4.2.0",
    "nock": "^13.2.1",
    "node-jose": "^2.0.0",
    "puppeteer": "^12.0.1",
    "request": "^2.88.2",
    "rimraf": "^3.0.2",
    "shellcheck": "^1.0.0",
    "simple-git-hooks": "^2.7.0",
    "uuid": "^8.3.2"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "versionist": {
    "publishedAt": "2021-12-05T12:25:02.338Z"
  }
}
