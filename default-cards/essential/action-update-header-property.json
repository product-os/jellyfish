{
  "slug": "action-update-header-property",
  "type": "action",
  "tags": [],
  "links": [],
  "active": true,
  "data": {
    "extends": "action-update-property",
    "arguments": {
      "property": {
        "type": "string",
        "anyOf": [
          { "const": "active" },
          { "const": "links" },
          { "const": "tags" },
          { "const": "slug" }
        ]
      },
      "value": {
        "type": [ "string", "array", "number", "object", "boolean" ]
      },
      "eventName": {
        "type": "string",
        "pattern": "^[a-z0-9-]+$"
      },
      "eventPayload": {
        "type": "object"
      }
    },
    "options": {
      "property": "{{arguments.property}}",
      "value": "{{arguments.value}}",
      "eventName": "{{arguments.eventName}}",
      "eventPayload": "{{arguments.eventPayload}}"
    }
  }
}
