{
  "slug": "action-update-data-property",
  "type": "action",
  "name": "Update a data property of a card",
  "tags": [],
  "links": [],
  "active": true,
  "data": {
    "extends": "action-update-property",
    "arguments": {
      "property": {
        "type": "string",
        "pattern": "^[a-zA-Z0-9.]+$"
      },
      "value": {
        "type": [ "string", "array", "number", "object", "boolean" ]
      }
    },
    "options": {
      "property": "data.{{arguments.property}}",
      "value": "{{arguments.value}}"
    }
  }
}
