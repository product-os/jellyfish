{
  "slug": "user",
  "type": "type",
  "name": "Jellyfish User",
  "tags": [],
  "links": [],
  "active": true,
  "data": {
    "schema": {
      "type": "object",
      "properties": {
        "slug": {
          "type": "string",
          "pattern": "^user-[a-z0-9-]+$"
        },
        "data": {
          "type": "object",
          "properties": {
            "contactMethods": {
              "type": "array",
              "minItems": 1,
              "uniqueItems": true,
              "items": {
                "type": "object",
                "properties": {
                  "protocol": {
                    "type": "string",
                    "enum": [ "mailto", "http", "https", "tel" ]
                  },
                  "value": {
                    "type": "string"
                  }
                },
                "required": [ "protocol", "value" ]
              }
            },
            "password": {
              "type": "object",
              "properties": {
                "hash": {
                  "type": "string",
                  "pattern": "^[a-f0-9]+$"
                },
                "salt": {
                  "type": "string",
                  "pattern": "^[a-zA-Z0-9/+]+==?$"
                }
              },
              "required": [ "hash", "salt" ]
            },
            "roles": {
              "type": "array",
              "minItems": 0,
              "items": {
                "type": "string",
                "pattern": "^[a-z0-9-]+$"
              },
              "uniqueItems": true
            }
          },
          "required": [
            "contactMethods",
            "roles"
          ]
        }
      },
      "required": [ "slug", "data" ]
    }
  }
}
