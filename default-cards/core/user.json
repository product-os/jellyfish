{
  "slug": "user",
  "type": "type",
  "name": "Jellyfish User",
  "markers": [],
  "tags": [],
  "links": {},
  "active": true,
  "data": {
    "schema": {
      "type": "object",
      "properties": {
        "markers": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9-_/:+]+$"
          }
        },
        "slug": {
          "type": "string",
          "pattern": "^user-[a-z0-9-]+$"
        },
        "data": {
          "type": "object",
          "properties": {
            "disallowLogin": {
              "type": "boolean"
            },
            "email": {
              "type": "string",
              "format": "email"
            },
            "password": {
              "type": "object",
              "properties": {
                "hash": {
                  "type": "string",
                  "pattern": "^[a-f0-9]+$"
                }
              },
              "required": [ "hash" ]
            },
            "roles": {
              "type": "array",
              "items": {
                "type": "string",
                "pattern": "^[a-z0-9-]+$",
                "not": {
                  "const": "user-admin"
                }
              }
            }
          },
          "required": [
            "email",
            "roles"
          ]
        }
      },
      "required": [ "slug", "data" ]
    }
  }
}
