{
  "slug": "scratchpad-entry",
  "type": "type",
  "version": "1.0.0",
  "name": "Scratchpad Entry",
  "markers": [ "org-balena" ],
  "tags": [],
  "links": {},
  "active": true,
  "data": {
    "schema": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9-_/][a-zA-Z0-9-_/\\s]+[a-zA-Z0-9-_/]$"
          },
          "$$formula": "AGGREGATE($events, 'tags')"
        },
        "data": {
          "type": "object",
          "properties": {
            "mentionsUser": {
              "type": "array",
              "$$formula": "AGGREGATE($events, 'data.payload.mentionsUser')"
            },
            "alertsUser": {
              "type": "array",
              "$$formula": "AGGREGATE($events, 'data.payload.alertsUser')"
            },
            "Problem": {
              "type": "string",
              "format": "markdown"
            },
            "Solution": {
              "type": "string",
              "format": "markdown"
            }
          }
        }
      },
      "required": [
        "name"
      ],
      "additionalProperties": true
    },
    "fieldOrder": [
      "Title",
      "Problem",
      "Solution"
    ]
  },
  "requires": [],
  "capabilities": []
}
