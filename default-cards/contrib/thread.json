{
  "slug": "thread",
  "type": "type",
  "name": "Chat thread",
  "version": "1.0.0",
  "componentVersion": "1.0.0",
  "capabilities": [],
  "requires": {},
  "tags": [],
  "links": {},
  "active": true,
  "data": {
    "schema": {
      "type": "object",
      "properties": {
        "tags": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9-_/]+$"
          },
          "$$formula": "AGGREGATE($events, 'tags')"
        },
        "data": {
          "type": "object",
          "properties": {
            "mentionsUser": {
              "type": "array",
              "$$formula": "AGGREGATE($events, 'data.payload.mentionsUser')"
            },
            "alertsUser": {
              "type": "array",
              "$$formula": "AGGREGATE($events, 'data.payload.alertsUser')"
            },
            "description": {
              "type": "string"
            }
          }
        }
      },
      "additionalProperties": true
    }
  }
}
