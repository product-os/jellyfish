{
  "slug": "triggered-action-todo-hashtag",
  "type": "triggered-action",
  "tags": [],
  "links": [],
  "active": true,
  "data": {
    "filter": {
      "type": "object",
      "required": [ "type", "data" ],
      "properties": {
        "type": {
          "type": "string",
          "const": "message"
        },
        "data": {
          "type": "object",
          "required": [ "payload" ],
          "properties": {
            "payload": {
              "type": "object",
              "required": [ "message" ],
              "properties": {
                "message": {
                  "type": "string",
                  "pattern": "#todo"
                }
              }
            }
          }
        }
      }
    },
    "action": "action-create-card-from-tag",
    "target": "{source.id}",
    "arguments": {
      "type": "todo",
      "tag": "#todo",
      "sourcePath": "data.payload.message",
      "properties": {
        "slug": "todo-[origin.id]",
        "data": {
          "actor": "[actor]",
          "origin": "[origin.id]",
          "message": "[content]",
          "complete": false
        }
      }
    }
  }
}
