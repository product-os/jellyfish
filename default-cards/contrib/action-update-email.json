{
  "slug": "action-update-email",
  "type": "action",
  "name": "Update a user email",
  "tags": [],
  "links": [],
  "active": true,
  "data": {
    "filter": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "user"
        }
      },
      "required": [ "type" ]
    },
    "extends": "action-update-data-property",
    "arguments": {
      "email": {
        "type": "string",
        "format": "email"
      }
    },
    "options": {
      "property": "email",
      "value": "{{arguments.email}}",
      "eventName": "update",
      "eventPayload": {
        "data": {
          "email": "{{arguments.email}}"
        }
      }
    }
  }
}
