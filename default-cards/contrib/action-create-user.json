{
  "slug": "action-create-user",
  "type": "action",
  "name": "Create a user",
  "tags": [],
  "links": [],
  "active": true,
  "data": {
    "filter": {
      "type": "object",
      "properties": {
        "slug": {
          "type": "string",
          "const": "user"
        },
        "type": {
          "type": "string",
          "const": "type"
        }
      },
      "required": [ "slug", "type" ]
    },
    "arguments": {
      "username": {
        "type": "string",
        "pattern": "^user-[a-zA-Z0-9-]{5,}$"
      },
      "email": {
        "type": "string",
        "format": "email"
      },
      "hash": {
        "type": "string",
        "pattern": "^[a-f0-9]+$",
        "$$formula": "HASH(input)"
      }
    }
  }
}
