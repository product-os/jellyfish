{
  "slug": "support-thread",
  "name": "Support Thread",
  "type": "type",
  "markers": [],
  "tags": [],
  "links": {},
  "active": true,
  "data": {
    "schema": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "pattern": "^.*\\S.*$"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9-_/][a-zA-Z0-9-_/\\s]+[a-zA-Z0-9-_/]$"
          },
          "$$formula": "AGGREGATE($events, 'tags')"
        },
        "data": {
          "type": "object",
          "properties": {
            "mentionsUser": {
              "type": "array",
              "$$formula": "AGGREGATE($events, 'data.payload.mentionsUser')"
            },
            "alertsUser": {
              "type": "array",
              "$$formula": "AGGREGATE($events, 'data.payload.alertsUser')"
            },
            "description": {
              "type": "string",
              "format": "markdown"
            },
            "status": {
              "type": "string",
              "default": "open",
              "enum": [ "open", "closed" ]
            },
            "archived": {
              "type": "boolean",
              "default": false
            }
          }
        }
      },
      "additionalProperties": true,
      "required": [ "tags", "data" ]
    }
  }
}
