{
  "extends": "@balena/lint/tsconfig.json",
  "compilerOptions": {
    "target": "es2020",
    "noImplicitAny": false,
    "allowJs": false,
    "outDir": "build",
    "esModuleInterop": true,
    "removeComments": false,
    "resolveJsonModule": true,
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "types": ["jest"]
  },
  "include": ["lib/**/*.ts", "@types/**/*.ts", "test/**/*.ts"],
  "ts-node": {
    "files": true
  }
}
