                "type": "string"
              }
            },
            "alertsGroup": {
              "type": "array",
              "$$formula": "AGGREGATE($events, 'data.payload.alertsGroup')",
              "items": {
                "type": "string"
              }
            },
            "description": {
              "type": "string",
              "format": "markdown"
            },
            "status": {
              "title": "Status",
              "type": "string",
              "default": "open",
              "enum": [
                "open",
                "closed"
              ]
            }
          },
          "required": [
            "status"
          ]
        }
      },
      "required": [
        "name",
        "data"
      ]
    },
    "slices": [
      "properties.data.properties.status"
    ],
