  "active": true,
  "data": {
    "schema": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "pattern": "^.*\\S.*$"
        },
        "data": {
          "type": "object",
          "properties": {
            "mentionsUser": {
              "type": "array",
              "$$formula": "AGGREGATE($events, 'data.payload.mentionsUser')"
            },
            "alertsUser": {
              "type": "array",
              "$$formula": "AGGREGATE($events, 'data.payload.alertsUser')"
            },
            "mentionsGroup": {
              "type": "array",
              "$$formula": "AGGREGATE($events, 'data.payload.mentionsGroup')",
