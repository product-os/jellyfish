{
  "slug": "view-my-inbox",
  "name": "Inbox",
  "version": "1.0.0",
  "type": "view",
  "markers": [],
  "tags": [],
  "links": {},
  "active": true,
  "data": {
    "schema": {
      "type": "object",
      "required": [ "type", "data" ],
      "additionalProperties": true,
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "message",
            "whisper"
          ]
        },
        "data": {
          "type": "object",
          "required": [
            "payload"
          ],
          "additionalProperties": true,
          "properties": {
            "readBy": {
              "type": "array",
              "items": {
                "not": {
                  "const": {
                    "$eval": "user.slug"
                  }
                }
              }
            },
            "payload": {
              "type": "object",
              "required": [
                "message"
              ],
              "additionalProperties": true,
              "properties": {
                "message": {
                  "anyOf": [
                    {
                      "pattern": {
                        "$eval": "'@' + user.slug[5:]"
                      }
                    },
                    {
                      "pattern": {
                        "$eval": "'!' + user.slug[5:]"
                      }
                    }
                  ]
                }
              }
            }
          }
        }
      }
    },
    "lenses": [
      "lens-inbox"
    ]
  },
  "requires": [],
  "capabilities": []
}
