{
  "slug": "agenda",
  "name": "Agenda",
  "type": "type@1.0.0",
  "markers": [],
  "data": {
    "schema": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "pattern": "^.*\\S.*$"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "$$formula": "AGGREGATE($events, 'tags')"
        },
        "data": {
          "type": "object",
          "properties": {
            "date": {
              "type": "string",
              "format": "date-time"
            }
          }
        }
      },
      "required": [
        "data"
      ]
    },
		"meta": {
			"relationships": [
				{
					"title": "Discussion topics",
          "link": "has",
					"type": "discussion-topic"
				}
			]
		}
  }
}
